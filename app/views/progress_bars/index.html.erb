<div class="main">
  <div class="container">
    <h1>Progress Bar</h1>
    <p>Home</p>
  </div>
</div>

<div class="items">
  <div class="container">
  
    <% @items.each do |item| %>
      <div class="item">
          <p class = "description"> <p>Description:</p> <%= item.description%> </p>
          <p class = "status"> <p>Status: </p>  <%= item.status%> </p>
            <p class = "order"> <p>Order: </p> <%= item.order%> </p>
            <p class = "iteration"> <p>Iteration: </p> <%= item.iteration%> </p>
          <p class="timestamp"><%= item.created_at %> </p>
      </div> 
   <% end %>


  </div>
</div>